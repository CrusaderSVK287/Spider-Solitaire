<Window x:Class="Spider_Solitaire.WindowS"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Spider_Solitaire"
        mc:Ignorable="d"
        Title="Spider Solitaire"
        Height="800"
        Width="1150"
        MinWidth="1000"
        MinHeight="700"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        AllowsTransparency="True"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" 
              Background="Black"
              MouseLeftButtonDown="DragWindow">
            <TextBlock Text="test" Foreground="White"/>
            <Button Content="EXIT" 
                    HorizontalAlignment="Left" 
                    Margin="1070,0,0,0" 
                    FontSize="15" 
                    Width="50"
                    Name="ExitButton"
                    Click="ExitButtonClick"
                    Height="30"
                    VerticalAlignment="Top"/>
        </Grid>
        <Frame Grid.Row="1" Name="SolitaireFrame" Source="Menu.xaml" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
